        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bolin.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="com.bolin.pojo.Student">
            <id property="sno" column="sNo" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="age" column="age" jdbcType="TINYINT"/>
            <result property="hobby" column="hobby" jdbcType="VARCHAR"/>
